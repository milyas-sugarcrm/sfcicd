<aura:component
  controller="OppLineItemNavController"
  implements="force:lightningQuickActionWithoutHeader,force:appHostable,lightning:actionOverride,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes"
  access="global"
>
  <aura:attribute name="estimateId" type="Id" />
  <aura:attribute name="workOrderId" type="Id" />
  <aura:attribute name="shippingId" type="Id" />
  <aura:attribute name="purchaseOrderId" type="Id" />
  <aura:attribute name="check" type="String" default="here" />
  <aura:attribute name="Spinner" type="boolean" default="true" />
  <aura:attribute name="Size" type="String" default="0" />
  <aura:attribute name="EnablePresentation" type="boolean" default="false" />
  <aura:attribute name="EnableEstimate" type="boolean" default="false" />
  <aura:attribute name="EnableSalesOrder" type="boolean" default="false" />
  <aura:attribute name="EnablePurchaseOrder" type="boolean" default="false" />
  <aura:handler event="force:refreshView" action="{!c.doInit}" />
  <aura:handler event="c:RefreshTabs" action="{!c.refresh}" />

  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
  <div class="slds-box slds-theme_default">
    <lightning:tabset aura:id="tabs" selectedTabId="one">
      <aura:if isTrue="{!v.EnablePresentation}">
        <lightning:tab label="Presentation" id="one">
          <c:OpportunityLineItems recordId="{!v.recordId}" />
        </lightning:tab>
      </aura:if>

      <aura:if isTrue="{!v.EnableEstimate}">
        <lightning:tab label="Estimate" id="two">
          <c:EstimateOppLineItemInline recordId="{!v.estimateId}" />
        </lightning:tab>
      </aura:if>

      <!--<aura:if isTrue = "{!$Label.c.Display_PO_So_Tabs == 'True'}"> 
            <aura:if isTrue="{!v.EnableSalesOrder}">
                <lightning:tab label="Sales Order" id="three">
                    <c:SalesOrderOppLineItem salesOrderId="{!v.workOrderId}" opportunityId = "{!v.recordId}"/>
                </lightning:tab>
            </aura:if>
            
            <aura:if isTrue="{!v.EnableSalesOrder}">
                <lightning:tab label="Shipping" id="four">
                    <c:ShippingOppLineItem recordId="{!v.shippingId}" />
                </lightning:tab>
            </aura:if>
            
            <aura:if isTrue="{!v.EnablePurchaseOrder}">
                <lightning:tab label="Purchase Order" id="five">
                    <c:PurchaaseOrderOppLineItem recordId="{!v.purchaseOrderId}" />
                </lightning:tab>
            </aura:if>
        </aura:if> -->
    </lightning:tabset>
  </div>
</aura:component>
