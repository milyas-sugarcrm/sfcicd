<aura:component
  controller="customLookUpController"
  implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction"
  access="global"
>
  <aura:attribute
    name="selectedRecord"
    type="sObject"
    default="{}"
    description="Use,for store SELECTED sObject Record"
  />
  <aura:attribute
    name="lstSelectedRecords"
    type="sObject[]"
    default="[]"
    description="Use,for store SELECTED sObject Records"
  />
  <aura:attribute
    name="listOfSearchRecords"
    type="List"
    description="Use,for store the list of search records which returns from apex class"
  />
  <aura:attribute name="SearchKeyWord" type="string" />
  <aura:attribute name="objectAPIName" type="string" default="" />
  <aura:attribute name="selectedOrgRecord" type="string" default="" />
  <aura:attribute name="IconName" type="string" default="" />
  <aura:attribute name="label" type="string" default="" />
  <aura:attribute name="orgstatusid" type="Id" />
  <aura:attribute name="accountType" type="String" />
  <aura:attribute name="doNotClearSearchText" type="boolean" default="false" />
  <aura:attribute name="cplaceholder" type="String" />
  <aura:attribute name="dependentComponentId" type="String" />
  <aura:attribute name="searchIcon" type="boolean" default="true" />
  <aura:attribute name="supplierAdd" type="string" default="" />
  <aura:attribute name="decoratorAdd" type="string" default="" />
  <aura:attribute name="selectedDone" type="boolean" default="false" />
  <!--declare events hendlers-->
  <aura:handler
    name="oSelectedRecordEvent"
    event="c:selectedsObjectRecordEvent"
    action="{!c.handleComponentEvent}"
  />
  <aura:handler event="aura:waiting" action="{!c.showSpinner}" />
  <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}" />
  <aura:registerEvent name="selectedRecordEvent" type="c:selectedLookUpEvent" />
  <aura:registerEvent
    name="selectedRecordEventChoose"
    type="c:selectedLookUpEvent"
  />
  <aura:attribute name="Message" type="String" default="" />
  <aura:method
    name="initalizeData"
    action="{!c.initalizeData}"
    access="PUBLIC"
  />
  <aura:method name="clearData" action="{!c.customClearData}" access="PUBLIC" />
  <aura:method
    name="UpdateLookup"
    action="{!c.doAction}"
    description="Sample method with parameters"
  >
    <aura:attribute name="Name" type="String" />
    <aura:attribute name="RecId" type="String" />
  </aura:method>
  <aura:attribute name="fieldRequired" type="boolean" default="false" />

  <div
    aura:id="searchRes"
    class="slds-form-element slds-lookup slds-is-close"
    data-select="single"
  >
    <aura:if isTrue="{!v.fieldRequired == true}">
      <span style="color: red">*</span>&nbsp;<label
        class="slds-form-element__label"
        for="lookup-348"
        >{!v.label}</label
      >
    </aura:if>
    <!--This part is for display search bar for lookup-->
    <div class="slds-form-element__control">
      <div
        class="slds-input-has-icon slds-input-has-icon--right custom-min-height"
      >
        <aura:if isTrue="{!v.searchIcon == true}">
          <lightning:icon
            class="slds-input__icon slds-show"
            iconName="utility:search"
            size="xx-small"
            alternativeText="search"
          />
        </aura:if>
        <!-- This markup is for when an record is selected -->
        <div aura:id="lookup-pill" class="slds-pill-container slds-hide">
          <span class="slds-pill" style="width: 100%">
            <span
              class="slds-icon_container slds-combobox__input-entity-icon"
              title="record"
            >
              <lightning:icon
                class="slds-icon slds-icon slds-icon_small slds-icon-text-default"
                iconName="{!v.IconName}"
                size="x-small"
                alternativeText="icon"
              />
              <span class="slds-assistive-text"></span>
            </span>
            <span class="slds-pill__label slds-p-left_x-large">
              {!v.selectedRecord.Name}
            </span>
            <button
              class="slds-button slds-button--icon slds-pill__remove"
              onclick="{!c.clear}"
            >
              <lightning:icon
                class="slds-button__icon"
                iconName="utility:close"
                size="x-small"
                alternativeText="search"
              />
              <span class="slds-assistive-text">Remove</span>
            </button>
          </span>
        </div>
        <div aura:id="lookupField" class="slds-show">
          <ui:inputText
            aura:id="inputcmp"
            click="{!c.onfocus}"
            updateOn="keyup"
            keyup="{!c.keyPressController}"
            required="true"
            class="slds-lookup__search-input slds-input"
            value="{!v.SearchKeyWord}"
            placeholder="{! 'Search ' +  v.cplaceholder}"
          />
        </div>
      </div>
    </div>
    <!--This part is for Display typehead lookup result List-->
    <ul
      class="slds-listbox slds-listbox_vertical slds-dropdown slds-dropdown_fluid slds-lookup__menu slds"
      role="listbox"
      style="margin-top: 0px !important"
    >
      <center>{!v.Message}</center>
      <aura:iteration items="{!v.listOfSearchRecords}" var="singleRec">
        <c:customLookupResult
          oRecord="{!singleRec}"
          IconName="{!v.IconName}"
          orgstatusid="{!v.orgstatusid}"
          aura:id="customlookup"
        />
      </aura:iteration>
    </ul>
  </div>
</aura:component>
