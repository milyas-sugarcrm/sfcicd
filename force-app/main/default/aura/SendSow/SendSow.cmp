<!-- SendSowAura.cmp -->
<aura:component
  controller="SowPandaDocHandler"
  implements="force:lightningQuickActionWithoutHeader,force:appHostable,lightning:actionOverride,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,lightning:isUrlAddressable"
  access="global"
>
  <aura:attribute name="recordId" type="String" />
  <aura:attribute name="stageName" type="String" />
  <aura:attribute name="pandaDocId" type="String" />
  <aura:attribute name="awsFileName" type="String" />

  <lightning:card title="Sending SOW...">
    <!-- Placeholder for messages -->
    <lightning:messages />
  </lightning:card>

  <!-- Handle processing on loading aura component -->
  <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
</aura:component>
