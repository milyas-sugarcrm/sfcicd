<apex:page
  controller="QuickbookConnection"
  action="{!doFetchAccessToken}"
  lightningStylesheets="true"
>
  <apex:slds />
  <script
    type="text/javascript"
    src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"
  ></script>

  <style>
    #col1 {
      display: inline-block !important;
      float: none;
      width: 49%;
      vertical-align: top;
    }
    #col2 {
      display: inline-block !important;
      float: none;
      width: 49%;
      vertical-align: top;
    }
    .mainDiv {
      padding-top: 2rem;
    }
    .IconColour {
      background-color: #6da1ea !important;
    }
  </style>

  <script>
    var opened1 = true;
    var opened2 = true;
    function openSection1() {
      opened1
        ? $("#sectionOneOpen").removeClass("slds-is-open")
        : $("#sectionOneOpen").addClass("slds-is-open");
      opened1 = !opened1;
    }
    function openSection2() {
      opened2
        ? $("#sectionTwoOpen").removeClass("slds-is-open")
        : $("#sectionTwoOpen").addClass("slds-is-open");
      opened2 = !opened2;
    }
  </script>
  <apex:form>
    <div class="slds-tabs_default mainDiv">
      <ul class="slds-tabs_default__nav" role="tablist">
        <li
          class="slds-tabs_default__item slds-is-active"
          role="presentation"
          id="tablist1"
        >
          <p class="slds-tabs_default__link" id="tab1">
            Quickbook Authorization
          </p>
        </li>
      </ul>

      <div
        id="tabView1"
        class="slds-tabs_default__content slds-show"
        role="tabpanel"
        aria-labelledby="tab1"
      >
        <apex:outputPanel id="t1s1">
          <div align="center">
            <div>
              <div class="slds-form-element">
                <span>
                  <label class="slds-form-element__label">
                    <span style="color: blue"><b>Redirect URI: </b> </span
                    >{!baseurl}
                  </label>
                </span>
              </div>
              <div class="slds-form-element">
                <span>
                  <label class="slds-form-element__label">
                    <span style="color: red"><b>Note: </b> </span>Please paste
                    this link under Custom Label 'QB_Redirect_URI' and your
                    Quickbook Developer Application.
                  </label>
                </span>
              </div>
            </div>
          </div>
          <br />
        </apex:outputPanel>
        <apex:pageMessages />
        <div id="sectionOneOpen" class="slds-section slds-is-open">
          <h3 class="slds-section__title">
            <button
              aria-controls="expando-unique-id"
              aria-expanded="true"
              class="slds-button slds-section__title-action"
              onclick="openSection1();return false;"
            >
              <svg
                class="slds-section__title-action-icon slds-button__icon slds-button__icon_left"
                aria-hidden="true"
              >
                <use
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                  xlink:href="/apexpages/slds/latest/assets/icons/utility-sprite/svg/symbols.svg#switch"
                />
              </svg>
              <span class="slds-truncate" title="Section Title"
                >Authorization Settings</span
              >
            </button>
          </h3>
          <div
            aria-hidden="false"
            class="slds-section__content"
            id="expando-unique-id"
          >
            <apex:outputPanel id="t1s3">
              <div>
                <div id="col1">
                  <div style="padding-left: 2rem">
                    <div class="slds-form-element">
                      <apex:selectList
                        value="{!selectedQBAccount}"
                        style="margin-right: 10px"
                        size="1"
                      >
                        <apex:selectOptions
                          value="{!quickbooksAccountsList}"
                        ></apex:selectOptions>
                      </apex:selectList>
                      <apex:image
                        height="25"
                        width="25"
                        value="{!URLFOR($Resource.DonePendingStatus,'images/pending.png')}"
                        rendered="{!QbCred == null}"
                      />
                      <apex:image
                        height="25"
                        width="25"
                        value="{!URLFOR($Resource.DonePendingStatus,'images/done.png')}"
                        rendered="{!QbCred != null}"
                      />
                      <apex:commandLink
                        value="Authorize Quickbooks"
                        action="{!doAuthorizationQuickBooks}"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </apex:outputPanel>
          </div>
        </div>
        <div id="sectionTwoOpen" class="slds-section slds-is-open">
          <h3 class="slds-section__title">
            <button
              aria-controls="expando-unique-id"
              aria-expanded="true"
              class="slds-button slds-section__title-action"
              onclick="openSection2();return false;"
            >
              <svg
                class="slds-section__title-action-icon slds-button__icon slds-button__icon_left"
                aria-hidden="true"
              >
                <use
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                  xlink:href="/apexpages/slds/latest/assets/icons/utility-sprite/svg/symbols.svg#switch"
                />
              </svg>
              <span class="slds-truncate" title="Section Title"
                >Connected Instances</span
              >
            </button>
          </h3>
          <div
            aria-hidden="false"
            class="slds-section__content"
            id="expando-unique"
            style="padding-left: 2rem"
          >
            <apex:repeat value="{!quickbooksAccounts}" var="map">
              <apex:outputPanel id="t1s34">
                <apex:commandButton
                  value="{!map.nameOfInstance}"
                  action="{!authenticateSelected}"
                  rerender="t1s34"
                >
                  <apex:param
                    name="selectedInstance"
                    value="{!map.nameOfInstance}"
                    assignTo="{!selectedButtonQBAccount}"
                  />
                </apex:commandButton>
                &nbsp; &nbsp;
              </apex:outputPanel>
            </apex:repeat>
          </div>
        </div>
      </div>
    </div>
  </apex:form>
</apex:page>
