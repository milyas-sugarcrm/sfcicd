<apex:page
  controller="ApproveSOWController"
  action="{!approveOpportunity}"
  showHeader="true"
  cache="false"
  expires="0"
  standardStylesheets="false"
>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #f0f0f0;
    }

    .confirmation-box {
      background-color: #4caf50;
      color: white;
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  </style>

  <div class="confirmation-box">
    <apex:pageMessages />
    <h2>Thank you for approving!</h2>
  </div>
</apex:page>
